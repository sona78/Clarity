{
  "name": "clarity-app",
  "version": "1.0.0",
  "description": "Career planning application with React frontend and Python API",
  "main": "api/index.py",
  "scripts": {
    "dev": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "start": "cd api && python index.py",
    "install-frontend": "cd frontend && npm install",
    "install-api": "cd api && pip install -r requirements.txt",
    "install-all": "npm run install-frontend && npm run install-api"
  },
  "keywords": ["career", "planning", "react", "fastapi", "python"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "python": ">=3.8.0"
  }
}